<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.qingfeng.analysis.dao.TargetDao">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.qingfeng.analysis.beans.TargetEntity" id="targetMap">
        <result property="id" column="id"/>
        <result property="discribe" column="discribe"/>
        <result property="reqId" column="req_id"/>
        <result property="year" column="year"/>
        <result property="sysGrade" column="sys_grade"/>
        <result property="stuGrade" column="stu_grade"/>
        <result property="createdDate" column="created_date"/>
        <result property="updateDate" column="update_date"/>
    </resultMap>

    <resultMap id="courseTargetMap" type="com.qingfeng.analysis.beans.vo.CourseTargetVo">
        <id column="id" property="id"/>
        <result column="course_id" property="courseId"/>
        <result column="discribe" property="discribe"/>
        <result column="req_id" property="reqId"/>
        <result column="mix" property="mix" />
        <result column="year" property="year"/>
        <result column="sys_grade" property="sysGrade"/>
        <result column="stu_grade" property="stuGrade"/>

        <!-- 一对多关联查询课程目标 -->
        <collection property="courseTaskVoList" select="com.qingfeng.analysis.dao.CourseTaskDao.findByCourseId"
                    column="{courseId=course_id,targetId=id,year=year}" />
    </resultMap>


    <select id="findByCourseTargetId" resultMap="courseTargetMap">
        select tt.id,
               tct.course_id,
               tt.discribe,
               tt.req_id,
               tct.mix,
               tt.`year`,
               tt.sys_grade,
               tt.stu_grade
        from t_course tc
                 LEFT JOIN t_course_target tct on tc.id = tct.course_id
                 LEFT JOIN t_target tt ON tct.target_id = tt.id
        where tt.`year` = #{year}
          and tc.id = #{courseId};
    </select>


</mapper>